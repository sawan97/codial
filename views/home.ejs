<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="header" >TODO APP</h1>
	<form action="/data" id="form">
		<table cellspacing="0" border="1">
			<tr>
				<td  colspan="2">
		<label for="description" style="margin-left: 2rem;">DESCRIPTION</label>
		<br>
		<input type="text" name="description" placeholder="what do you want?" class="no-outline">
				</td>
			</tr>
			<tr>
				<td >
					<label for="category"  style="margin-left: 2rem;">CATEGORY</label>
					<br>
					<select name="category" class="no-outline">
						<option>choose a category</option>
						<option value="Perssonnel">personnel</option>
						<option value="Home">Home</option>
						<option value="Work">Work</option>
						<option value="Others">Others</option>
					</select>
				</td>
				<td >
					<label for="date"  style="margin-left: 2rem;">Due Date</label>
					<br>
					<input type="date" name="date" class="no-outline">
				</td>
			</tr>
		</table>
		<button type="submit" class="no-outline">ADD TASK</button>
		<button type="button" class="no-outline">DELETE TASK</button>
	</form>
	
	<div>
		<% for(let i of todo_list){%>
			<div class="list">
				<input type="checkbox" name="item1" value="<% i.description %>">
				<label for="item1">
					<p><%=i.description%></p>	
					<div class="items">
						<span><i class="far fa-calendar-alt"></i></span> &nbsp;<%=i.date%>
					</div>
				</label>
			</div>
			<%}%>

	</div>


        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>